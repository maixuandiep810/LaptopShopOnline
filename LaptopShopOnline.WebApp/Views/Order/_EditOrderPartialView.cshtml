@using LaptopShopOnline.Model.Entities

@model Order

<div class="col-md-8">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.BuyerId)
        @Html.HiddenFor(model => model.ShopId)
        @Html.HiddenFor(model => model.CreatedOn)
        @Html.HiddenFor(model => model.CreatedBy)
        @Html.HiddenFor(model => model.IsDeleted)


        <div class="form-group">
            @Html.LabelFor(model => model.ShipName, htmlAttributes: new { @class = "" })
            @Html.EditorFor(model => model.ShipName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ShipName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ShipPhone, htmlAttributes: new { @class = "" })
            @Html.EditorFor(model => model.ShipPhone, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ShipPhone, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ShipAddress, htmlAttributes: new { @class = "" })
            @Html.TextAreaFor(model => model.ShipAddress, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ShipAddress, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ShipEmail, htmlAttributes: new { @class = "" })
            @Html.EditorFor(model => model.ShipEmail, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ShipEmail, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn-primary btn-group-sm btn-sm">Cập nhật đơn hàng</button>
        </div>
    }
</div>

