@model IEnumerable<LaptopShopOnline.Model.Entities.Product>
@if ((int)ViewBag.Count > 0)
{
    foreach (var item in Model)
    {
        <div class="col-md-3 product-left" style="margin-top: 20px;">
            <div class="p-one simpleCart_shelfItem" style="height:410px;">
                    <a href=@Smart.Format(CommonConstants.ROUTE_SAN_PHAM_CHI_TIET_PARAMS, new { id = item.Id })>
                    <img src="@item.UrlImage" width="223" height="232" alt="" />
                    <div class="mask">
                        <span>Xem chi tiết</span>
                    </div>
                </a>
                <h4>@item.Name</h4>
                @if (item.PromotionPrice > 0)
                {
                    <p><a class="" href="#"><span class=""><strike>@(item.Price.ToString(CommonConstants.CurrencyFormat, CommonConstants.VietNamCultureInfo))</strike></span></a></p> <br />
                    <p><a class="item_add" href="/gio-hang/them-vao?productId=@item.Id&quantity=1"><i></i> <span class=" item_price">@(item.PromotionPrice.Value.ToString(CommonConstants.CurrencyFormat, CommonConstants.VietNamCultureInfo))</span></a></p>
                }
                else
                {
                    <p><a class="item_add" href="/gio-hang/them-vao?productId=@item.Id&quantity=1"><i></i> <span class=" item_price">@(item.Price.ToString(CommonConstants.CurrencyFormat, CommonConstants.VietNamCultureInfo))</span></a></p>
                }
            </div>
        </div>
    }
}