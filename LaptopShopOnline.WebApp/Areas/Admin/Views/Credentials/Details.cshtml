@model LaptopShopOnline.Model.Entities.Credential

@{
    Layout = null;
}
<div class="modal fade" id="MyModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Chi tiết giới thiệu</h4>
            </div>
            <div class="modal-body">
                <table class="table table-bordered table-striped">
                    <tr>
                        <th>
                            Quyền
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Role.Name)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Nhóm
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.UserGroup.Name)
                        </td>
                    </tr>
                </table>
            </div>
            <!-- /.modal-body -->
            <div class="modal-footer">
                <div class="form-actions no-color text-center">
                    <button type="button" class="btn btn-sm btn-secondary" style=" border: 0.5px solid #a8a9ad;" data-dismiss="modal">Thoát</button>
                </div>
            </div>
            <!-- /.modal-footer -->
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
