@model IEnumerable<LaptopShopOnline.Model.Entities.UserGroup>

@{
    ViewBag.Title = "Nhóm người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int i = 1;
}
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <p>
                    <a href=@Smart.Format(CommonConstants.ROUTE_QUAN_TRI_NHOM_NGUOI_DUNG_THEM_MOI_PARAMS) class="btn btn-group-sm btn-primary text-decoration-none"><i class="fa fa-plus"></i> Thêm mới</a>
                </p>
                <thead>
                    <tr>
                        <th class="col-md-1">
                            STT
                        </th>
                        <th class="col-md-4">
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th class="col-md-5">
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th class="col-md-2 text-center">
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @i
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <a class="btn-sm btn-group-sm btn-success" href=@Smart.Format(CommonConstants.ROUTE_QUAN_TRI_NHOM_NGUOI_DUNG_CAP_NHAT_PARAMS, new {id = item.Id})><i class="far fa-edit"></i></a>
                                <a class="btn-sm btn-group-sm btn-secondary dialog-link" href=@Smart.Format(CommonConstants.ROUTE_QUAN_TRI_NHOM_NGUOI_DUNG_CHI_TIET_PARAMS, new {id = item.Id})><i class="fas fa-info"></i></a>
                                <a class="btn-sm btn-group-sm btn-danger dialog-link" href=@Smart.Format(CommonConstants.ROUTE_QUAN_TRI_NHOM_NGUOI_DUNG_XOA_PARAMS, new {id = item.Id})><i class="far fa-trash-alt"></i></a>
                            </td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
            @if (Model.Count() <= 0)
            {
                <div class="text-center text-danger">Không có dữ liệu</div>
            }
        </div>
    </div>
</div>